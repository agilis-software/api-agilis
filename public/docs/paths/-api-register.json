{
  "post": {
    "summary": "Register a new user",
    "tags": [
      "Auth"
    ],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "example": "John Doe"
              },
              "email": {
                "type": "string",
                "example": "john.doe@example.com"
              },
              "password": {
                "type": "string",
                "example": "password123"
              },
              "password_confirmation": {
                "type": "string",
                "example": "password123"
              }
            }
          }
        }
      }
    },
    "responses": {
      "201": {
        "description": "User registered successfully",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    },
                    "token_type": {
                      "type": "string",
                      "example": "Bearer"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "422": {
        "description": "Validation error"
      }
    }
  }
}