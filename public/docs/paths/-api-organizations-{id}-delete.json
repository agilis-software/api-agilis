{
  "post": {
    "summary": "Delete an organization by ID",
    "tags": [
      "Organizations"
    ],
    "security": [
      {
        "bearerAuth": []
      }
    ],
    "parameters": [
      {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": {
          "type": "integer"
        }
      }
    ],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "password": {
                "type": "string",
                "example": "password123"
              },
              "password_confirmation": {
                "type": "string",
                "example": "password123"
              }
            }
          }
        }
      }
    },
    "responses": {
      "204": {
        "description": "Organization deleted successfully"
      },
      "401": {
        "description": "Unauthorized"
      },
      "404": {
        "description": "Organization not found"
      },
      "422": {
        "description": "Validation error"
      }
    }
  }
}