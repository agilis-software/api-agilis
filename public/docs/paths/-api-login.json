{
  "post": {
    "summary": "Login a user",
    "tags": [
      "Auth"
    ],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "example": "john.doe@example.com"
              },
              "password": {
                "type": "string",
                "example": "password123"
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "User logged in successfully",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    },
                    "token_type": {
                      "type": "string",
                      "example": "Bearer"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "401": {
        "description": "Unauthorized"
      },
      "422": {
        "description": "Invalid credentials"
      }
    }
  }
}