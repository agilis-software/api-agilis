{
  "post": {
    "summary": "Assign users to a project",
    "tags": [
      "Projects"
    ],
    "security": [
      {
        "bearerAuth": []
      }
    ],
    "parameters": [
      {
        "in": "path",
        "name": "id",
        "required": true,
        "schema": {
          "type": "string"
        },
        "description": "Organization ID"
      },
      {
        "in": "path",
        "name": "projectId",
        "required": true,
        "schema": {
          "type": "string"
        },
        "description": "Project ID"
      }
    ],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "users": {
                "type": "array",
                "items": {
                  "type": "integer"
                },
                "example": [
                  1,
                  2,
                  3
                ]
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Users assigned successfully",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "example": 1
                  },
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "example": "john.doe@example.com"
                  }
                }
              }
            }
          }
        }
      },
      "400": {
        "description": "Bad request"
      },
      "401": {
        "description": "Unauthorized"
      }
    }
  }
}